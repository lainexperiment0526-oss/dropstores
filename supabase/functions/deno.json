{
  "compilerOptions": {
    "lib": ["deno.window", "dom"],
    "strict": false,
    "allowJs": true,
    "noImplicitAny": false
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "importMap": "./import_map.json"
}
